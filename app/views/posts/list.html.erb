<% @posts.each do |post| %>
    <% if (post.category == 'video') %>
      <div class="post post-youtube">
    <% elsif (post.category == 'quote') %>
      <div class="post post-quote">
    <% elsif (post.category == 'image') %>
      <% if post.post_attachments.count == 1 %>
        <div class="post post-image">
      <% else %>
        <div class="post post-gallery">
      <% end %>
    <% end %>
        
        <% if (post.category == 'video') %>
          <div class="post-type"><i class="fa fa-youtube-play"></i></div>
        <% elsif (post.category == 'quote') %>
          <div class="post-type"><i class="fa fa-quote-left"></i></div>
        <% elsif (post.category == 'image') %>
          <div class="post-type"><i class="fa fa-image"></i></div>
        <% end %>
            <div class="clearfix"></div>
            <div class="post-head">
              <h3><%= post.title %></h3>
              <div class="post-meta">
                <div><i class="fa fa-user"></i>BY : <a href="#"><%= post.author %></a></div>
                <div><i class="fa fa-clock-o"></i><%= post.created_at %></div>
                <!-- <div><i class="fa fa-comments"></i><a href="#">22 Comments</a></div>
                <div><i class="fa fa-heart"></i><a href="#">77</a></div>
                <div><i class="fa fa-folder-open"></i>IN : <a href="#">WordPress</a>, <a href="#">PHP</a></div> -->
              </div><!-- End post-meta -->
              <div class="clearfix"></div>
            </div><!-- End post-head -->

            <div class="post-wrap">

              <% if (post.category == 'quote') %>
              <!-- Begin quote post -->
                <div class="post-inner">
                  <div class="post-quote-top"><i class="fa fa-quote-left"></i></div>
                  <p><%= post.quote_text %></p>
                  <span class="author">â€• <%= post.quote_author %></span>
                  <div class="post-quote-bottom"><i class="fa fa-quote-right"></i></div>
                  <div class="clearfix"></div>
                </div> <!-- End post-inner  -->
              <% end %> 

              <% if (post.category == 'image') %>
                <!-- Begin image post -->
                <div class="post-img">
                  <ul>
                    <% post.post_attachments.each do |p| %>
                      <li><%= image_tag p.media_url %></li>
                    <% end %>
                  </ul>
                </div><!-- End post-img -->
                <div class="post-inner">
                  <!-- blog content begins here -->
                  <p><%= truncate(post.content, :length => 700, separator: ' ') %> </p>
                  <!-- blog content ends here -->            
                    <div class="clearfix"></div>
                    <div class="post-share-view">
                      <div class="post-meta">
                        <div><i class="fa fa-eye"></i><span>145 </span>Views</div>
                        <div class="post-meta-share">
                          <i class="fa fa-share-alt"></i>
                          <a href="#">Share This</a>
                          <div class="share-social">
                            <ul>
                              <li class="social-facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                              <li class="social-twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                              <li class="social-google"><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                            <i class="fa fa-caret-down"></i>
                          </div><!-- End share-social -->
                        </div>
                        <% unless (post.quote_text != nil) %>
                          <%= link_to 'Read More', post, class: "button post-more" %>
                        <% end %>
                        <!-- <div class="post-tags">
                          <i class="fa fa-tags"></i>
                          Tags : <a href="#">2code</a>, <a href="#">Begha</a>, <a href="#">Design</a>, <a href="#">Logger</a>, <a href="#">Blog</a>, <a href="#">Single</a>, <a href="#">Quote</a>
                        </div> -->
                      </div><!-- End post-meta -->
                    </div><!-- End post-share-view -->
              
                  <div class="clearfix"></div>
                </div><!-- End post-inner -->
              <% end %>
              
              <% if (post.category == 'video') %>
              <!-- Begin video post -->
                <div class="post-img"><iframe height="420" src="<%= post.video_link %>" frameborder="0" allowfullscreen></iframe></div>
                <!-- End post-img -->
                <div class="post-inner">
                    <!-- blog content begins here -->
                    <p><%= truncate(post.content, :length => 700, separator: ' ') %> </p>
                    <!-- blog content ends here -->            
                      <div class="clearfix"></div>
                      <div class="post-share-view">
                        <div class="post-meta">
                          <div><i class="fa fa-eye"></i><span>145 </span>Views</div>
                          <div class="post-meta-share">
                            <i class="fa fa-share-alt"></i>
                            <a href="#">Share This</a>
                            <div class="share-social">
                              <ul>
                                <li class="social-facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li class="social-twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li class="social-google"><a href="#"><i class="fa fa-google-plus"></i></a></li>
                              </ul>
                              <i class="fa fa-caret-down"></i>
                            </div><!-- End share-social -->
                          </div>
                          <% unless (post.quote_text != nil) %>
                            <%= link_to 'Read More', post, class: "button post-more" %>
                          <% end %>
                          <!-- <div class="post-tags">
                            <i class="fa fa-tags"></i>
                            Tags : <a href="#">2code</a>, <a href="#">Begha</a>, <a href="#">Design</a>, <a href="#">Logger</a>, <a href="#">Blog</a>, <a href="#">Single</a>, <a href="#">Quote</a>
                          </div> -->
                        </div><!-- End post-meta -->
                      </div><!-- End post-share-view -->
                
                    <div class="clearfix"></div>
                </div><!-- End post-inner -->
              <% end %>
              

            </div><!-- End post-wrap -->
    </div><!-- End post -->
      <div class="height_20"></div>
<% end %>